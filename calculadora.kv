#: import utils kivy.utils

<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: '0'
            halign: 'right' #Alinear el texto, en este caso el '0'
            font_size: 60
            size_hint: (1, .12)
            multiline: False

        GridLayout: #Definimos un dise√±o de cuadricula para lso botones
            cols: 4
            rows: 5

            #Columnas
            Button:
                id: modulo
                size_hint:(.2, .2)
                font_size: 32
                text: '%'
                on_press: root.add('%')

            Button:
                id: delete
                size_hint:(.2, .2)
                font_size: 32
                text: 'CE'
                on_press: root.delete()
            
            Button:
                id: clear
                size_hint:(.2, .2)
                font_size: 32
                text: 'C'
                on_press: root.clear()

            Button:
                id: division
                size_hint:(.2, .2)
                font_size: 32
                text: '/'
                on_press: root.add('/')

            #Filas
            Button:
                size_hint:(.2, .2)
                font_size: 32
                text: '7'
                background_color: utils.get_color_from_hex('#A3A0A0')
                on_press: root.bottom_press(7)

            Button:
                size_hint:(.2, .2)
                font_size: 32
                text: '8'
                background_color: utils.get_color_from_hex('#A3A0A0')
                on_press: root.bottom_press(8)

            Button:
                size_hint:(.2, .2)
                font_size: 32
                text: '9'
                background_color: utils.get_color_from_hex('#A3A0A0')
                on_press: root.bottom_press(9)

            Button:
                id: multiplicacion
                size_hint:(.2, .2)
                font_size: 32
                text: 'X'
                on_press: root.add('*')
            
            Button:
                size_hint:(.2, .2)
                font_size: 32
                text: '4'
                background_color: utils.get_color_from_hex('#A3A0A0')
                on_press: root.bottom_press(4)
            
            Button:
                size_hint:(.2, .2)
                font_size: 32
                text: '5'
                background_color: utils.get_color_from_hex('#A3A0A0')
                on_press: root.bottom_press(5)

            Button:
                size_hint:(.2, .2)
                font_size: 32
                text: '6'
                background_color: utils.get_color_from_hex('#A3A0A0')
                on_press: root.bottom_press(6)
            
            Button:
                id: resta
                size_hint:(.2, .2)
                font_size: 32
                text: '-'
                on_press: root.add('-')

            Button:
                size_hint:(.2, .2)
                font_size: 32
                text: '1'
                background_color: utils.get_color_from_hex('#A3A0A0')
                on_press: root.bottom_press(1)

            Button:
                size_hint:(.2, .2)
                font_size: 32
                text: '2'
                background_color: utils.get_color_from_hex('#A3A0A0')
                on_press: root.bottom_press(2)

            Button:
                size_hint:(.2, .2)
                font_size: 32
                text: '3'
                background_color: utils.get_color_from_hex('#A3A0A0')
                on_press: root.bottom_press(3)
            
            Button:
                id: suma
                size_hint:(.2, .2)
                font_size: 32
                text: '+'
                on_press: root.add('+')

            Button:
                size_hint:(.2, .2)
                font_size: 32
                text: '+/-'
                background_color: utils.get_color_from_hex('#A3A0A0')
                on_press: root.cambio_signo()
            
            Button:
                size_hint:(.2, .2)
                font_size: 32
                text: '0'
                background_color: utils.get_color_from_hex('#A3A0A0')
                on_press: root.bottom_press(0)

            Button:
                size_hint:(.2, .2)
                font_size: 32
                text: '.'
                background_color: utils.get_color_from_hex('#A3A0A0')
                on_press: root.punto('.')

            Button:
                id: resultado
                size_hint:(.2, .2)
                font_size: 32
                text: '='
                on_press: root.resultado()
               
            


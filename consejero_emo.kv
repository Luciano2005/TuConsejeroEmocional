
#:import utils kivy.utils
#:import NoTransition kivy.uix.screenmanager.NoTransition

<UI>:
    #Pantalla principal
    Screen:
        name: 'principal'
        BoxLayout:
            orientation: 'vertical'
            
            MDTopAppBar:
                title: 'TuConsejeroEmocional'
                
                md_bg_color: rgba(0,0,1,0) #Cambiar color de fondo de la barra de navegación.
                #specific_text_color: utils.get_color_from_hex('#1C529D') #Cambiar color de la letra de la barra de navegación.

            #Barra inferior
            MDBottomNavigation:
                #panel_color: utils.get_color_from_hex('#8CB4EB') #Cambiar color de la barra inferior

                MDBottomNavigationItem:
                    name: 'menu'
                    text: 'Menú'
                    icon: 'home'
                    id: GG
                    on_tab_press: root.transition.direction = 'right'
                
                    
                    MDLabel:
                        text: 'Empezemos con un pequeño \ntest para poder guíarte y \nescucharte:'
                        halign: 'center'  
                        pos_hint: {'center_x': .5,'center_y': .7 }
                        #size_hint: (.5, None)
                        

                    MDRaisedButton:
                        text: '¡Toma el Test \nEmocional!'
                        md_bg_color: utils.get_color_from_hex('#FFFFFF')
                        text_color: utils.get_color_from_hex('#000000')
                        bold: True
                        font_size: 20
                        halign: 'center'
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        size_hint: (.4, .2)
                        on_release: root.current = 'pregunta1'
                        on_press: 
                            root.transition.direction = 'left'
                            app.preguntas_definicion()
                            


                MDBottomNavigationItem:
                    name: 'multimedia'
                    text: 'Multimedia'
                    icon: 'youtube'
                    id: multi
                    # disabled: True #RECORDAR QUITAR COMENTARIO
                    on_tab_press: 
                        app.inicio_multi(multi.disabled)
                        root.transition.direction = 'left'
                    
                        

                    ScrollView:
                        size_hint_y: 1
    	                
                        do_scroll_x: False
                        do_scroll_y: True
                        MDGridLayout:
                            id: recursos
                            size:(root.width, root.height)
    		                size_hint_x: None
    		                size_hint_y: None
                            cols: 1
                            padding: 30, 0, 30, 30
                            spacing: 20
                            
                            row_default_height: 135
                            row_force_default: True
                            height: self.minimum_height
                            
                            MDLabel:
                                text: 'Te recomendamos darle un vistazo a las siguientes categorías:'  
                                halign: 'center'
                                font_size: 24      
                                bold: True
                                     


                            Button:
                                text: 'Meditación y\nrelajación general'
                                font_size: 16
                                background_normal: 'TuConsejeroEmocional_imagenes/boton_meditacion.png'
                                background_down: 'TuConsejeroEmocional_imagenes/boton_meditacion_down.png'
                                halign: 'center'
                                bold: True
                                on_release: 
                                    root.current = 'meditacion'
                                    # root.transition = 'left'
                                

                    
                            
                            Button:
                                text: 'Manejo de emociones e\ninteligencia emocional'
                                font_size: 16
                                background_normal: 'TuConsejeroEmocional_imagenes/boton_emociones.png'
                                background_down: 'TuConsejeroEmocional_imagenes/boton_emociones_down.png'
                                halign: 'center'
                                bold: True
                                on_release: 
                                    root.current = 'emociones'

                            Button:
                                text: 'Habilidades sociales y\nrelaciones interpersonales'
                                font_size: 16
                                background_normal: 'TuConsejeroEmocional_imagenes/boton_social.png'
                                background_down: 'TuConsejeroEmocional_imagenes/boton_social_down.png'
                                halign: 'center'
                                bold: True
                                on_release: 
                                    root.current = 'social'

                            MDLabel:
                                text: 'Otras categorías que podrían interesarte:'
                                halign: 'center'
                                font_size: 24
                                bold: True

                            Button:
                                text: 'Implementación del tiempo y\n organización'
                                font_size: 16
                                background_normal: 'TuConsejeroEmocional_imagenes/boton_organizacion.png'
                                background_down: 'TuConsejeroEmocional_imagenes/boton_organizacion_down.png'
                                halign: 'center'
                                bold: True
                                on_release: 
                                    root.current = 'tiempo'

                            Button:
                                id: planeacion
                                text: 'Planeación de vida y\nvista al futuro'
                                font_size: 16
                                background_normal: 'TuConsejeroEmocional_imagenes/boton_futuro.png'
                                background_down: 'TuConsejeroEmocional_imagenes/boton_futuro_down.png'
                                halign: 'center'
                                bold: True
                                on_release: 
